# StealthScrape AI - Environment Configuration

# Application Settings
STEALTHSCRAPE_ENV=development
PORT=8000
HOST=0.0.0.0

# Stealth Configuration
STEALTH_LEVEL=maximum
USE_RESIDENTIAL_PROXIES=false
CDP_MODE=true
UC_MODE=true

# Test Credentials (Optional - Set these to run actual login tests)
# Facebook Test Account
FB_USER=your_facebook_email@example.com
FB_PASSWORD=your_facebook_password_here

# Instagram Test Account
IG_USER=your_instagram_username
IG_PASSWORD=your_instagram_password_here

# Twitter/X Test Account
TW_USER=your_twitter_username
TW_PASSWORD=your_twitter_password_here

# Amazon Test Account
AMAZON_EMAIL=your_amazon_email@example.com
AMAZON_PASSWORD=your_amazon_password_here

# Shopify Test Account
SHOPIFY_STORE=your-store.myshopify.com
SHOPIFY_EMAIL=your_shopify_email@example.com
SHOPIFY_PASSWORD=your_shopify_password_here

# Proxy Configuration
PROXY_API_KEY=your_proxy_api_key_here
PROXY_ROTATION_INTERVAL=300
PROXY_POOL_SIZE=10

# Proxy Format: user:pass@ip:port
# Examples:
# HTTP_PROXY=http://user:pass@proxy.example.com:8080
# HTTPS_PROXY=https://user:pass@proxy.example.com:8443
# PROXY_LIST=user:pass@192.168.1.100:8080,user:pass@192.168.1.101:8080

# Chrome Configuration
HEADLESS=true
CHROME_BINARY_PATH=
CHROMEDRIVER_PATH=

# Session Management
SESSION_TIMEOUT=3600
MAX_CONCURRENT_SESSIONS=10
SESSION_PERSISTENCE=true

# Data Storage
DATA_STORAGE_PATH=./scraped_data
LOG_LEVEL=INFO
LOG_PATH=./logs

# CAPTCHA Solving (Optional)
CAPTCHA_SOLVER_API_KEY=your_captcha_solver_key
CAPTCHA_SOLVER_SERVICE=2captcha

# Database (Optional - for production)
DB_CONNECTION_STRING=postgresql://user:password@localhost:5432/stealthscrape
REDIS_URL=redis://localhost:6379/0

# API Security
API_KEY=your_api_key_here
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Monitoring & Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=

# Development Settings
DEBUG=true
RELOAD=true
